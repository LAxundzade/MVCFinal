@model Portfolio.Models.Entity.Person
@{
    Layout = null;
}


<div class="col-md-4">
    <div class="side-bar">

        <!-- Professional Details -->
        <h5 class="tittle">Professional Details</h5>
        <img src="~/Template/images//@Model.MediaUrl" class="img-responsive" alt="">
        <ul class="personal-info">
            <li>
                <p> <span> Name</span> @Model.Name </p>
            </li>
            <li>
                <p> <span> Age</span> @Model.Age </p>
            </li>
            <li>
                <p> <span> Location</span> @Model.Location </p>
            </li>
            <li>
                <p> <span> Experience</span> @Model.ExperienceYears </p>
            </li>
            <li>
                <p> <span> Degree</span> @Model.Degrees.Name </p>
            </li>
            <li>
                <p> <span> Career Level</span> @Model.Levels.Name </p>
            </li>
            <li>
                <p> <span> Phone</span> @Model.Phone </p>
            </li>
            <li>
                <p> <span> FAX</span> @Model.FAX </p>
            </li>
            <li>
                <p> <span> E-mail</span> <a href="#."> @Model.EMail</a> </p>
            </li>
            <li>
                <p> <span> Website</span><a href="#."> @Model.Website </a></p>
            </li>
        </ul>

        <!-- Attachments -->
        <h5 class="tittle">Attachments</h5>
        <div class="attach bor-btm padding-25">
            <ul>
                <li>
                    <p><img src="~/Template/images/pdf-icon.jpg" alt=""> Curriculum-Vitae.pdf <a href="#."><i class="fa fa-cloud-download"></i></a> <a href="#."><i class="fa fa-eye"></i></a></p>
                </li>
                <li>
                    <p><img src="~/Template/images/word-icon.jpg" alt=""> COE.docx <a href="#."><i class="fa fa-cloud-download"></i></a> <a href="#."><i class="fa fa-eye"></i></a></p>
                </li>
            </ul>
        </div>

        <!-- Social Profiles -->
        <h5 class="tittle">Social Profiles</h5>
        <div class="social-icon bor-btm padding-25">
            <ul>
                <li> <a href="#."> <i class="fa fa-facebook"></i></a> </li>
                <li> <a href="#."> <i class="fa fa-google"></i></a> </li>
                <li> <a href="#."> <i class="fa fa-twitter"></i></a> </li>
                <li> <a href="#."> <i class="fa fa-linkedin"></i></a> </li>
                <li> <a href="#."> <i class="fa fa-skype"></i></a> </li>
            </ul>
        </div>

        <!-- Contact Me -->
        
    </div>
</div>


