            Praesent sodales velit quis augue. Cras suscipit, urna at aliquam rhoncus, urna quam viverra nisi, in interdum massa nibh nec erat. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin nibh augue, suscipit a, scelerisque sed, lacinia in, mi. Cras vel lorem. Etiam pellentesque aliquet tellus.
        </p>
        <div class="skills">

            <!-- HARD SKILLS -->
            <h5 class="margin-top-30">Hard Skills</h5>

            
            <!-- Sound Engineering -->
            @foreach (var item in Model.PersonSkill.Where(a=>a.IsSoft==false) )
            {
                <div class="panel-group accordion" id="accordion">
                    <div class="panel panel-default">
                        <div class="row">
                            <div class="col-sm-4">
                                <!-- PANEL HEADING -->
                                <div class="panel-heading">
                                    <h4 class="panel-title"> <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne"> @item.Skills.Name</a> </h4>
                                </div>
                            </div>

                            <!-- Skillls Bars -->
                            <div class="col-sm-8">
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: @item.Percentage;"> <span class="sr-only">@item.Percentage Complete</span> </div>
                                </div>

                                <!-- Skillls Text -->
                                <div id="collapseOne" class="panel-collapse collapse in">
                                    <div class="panel-body">
                                        <p>@item.Content</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Business Administration -->


                </div>
            }

            <!-- Soft Skills -->
            <h5 class="margin-top-30">Soft Skills</h5>

            <!-- Application of knowledge -->
            
            <div class="panel-group accordion" id="accordion1">
                @foreach (var item in Model.PersonSkill.Where(a => a.IsSoft == true))
                {
                   
                    <div class="panel panel-default">
                        <div class="row">

                            <div class="col-sm-4">
                                <!-- PANEL HEADING -->
                                <div class="panel-heading">
                                    <h4 class="panel-title"> <a data-toggle="collapse" data-parent=dataparent href="#collapsethr" class="collapsed"> @item.Skills.Name</a> </h4>
                                </div>
                            </div>

                            <!-- Skillls Bars -->
                            <div class="col-sm-8">
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width:@item.Percentage ;"> <span class="sr-only">@item.Percentage Complete</span> </div>
                                </div>

                                <!-- Skillls Text -->
                                <div id="collapsethr" class="panel-collapse collapse">
                                    <div class="panel-body">
                                        <p>@item.Content</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                }

            </div>

            <!-- Follow ethical -->
            <div class="ethical">
                <h6>Follow ethical work practices</h6>
                <a href="#.">Prioritize Learning Tasks</a> <a href="#.">Make Ethical Choices</a> <a href="#.">Social Work</a> <a href="#.">Community Work</a>
            </div>
        </div>
    </div>
</div>

<!-- Professional Experience -->
<div class="inside-sec margin-top-30">
    <!-- Professional Experience -->
    <h5 class="tittle">Professional Experience</h5>
    <div class="padding-30 exp-history">
        @foreach (var item in Model.Experience)
        {
            <div class="exp">
                <div class="media-left"> <span class="sun">@item.YearRange</span> </div>
                <div class="media-body">

                    <!-- COmpany Logo -->
                    <div class="company-logo"><img src="~/Template/images//@item.MediaUrl" alt=""> </div>
                    <h6>@item.Name</h6>
                    <p>@item.JobName</p>
                    <p>@item.Place</p>
                    <p class="margin-top-10">
                        @item.Content
                         <a href="#.">Read More</a>
                    </p>
                </div>
            </div>
        }
        <!-- Wordpress Developer -->



    </div>
</div>

<!-- Academic Background -->
<div class="inside-sec margin-top-30">
    <!-- Academic Background -->
    <h5 class="tittle">Academic Background</h5>
    <div class="padding-30 exp-history">
        @foreach (var item in Model.history)
        {
            <div class="exp">
                <div class="media-left"> <span class="sun">@item.YearRange</span> </div>
                <div class="media-body">
                    <!-- COmpany Logo -->
                    <div class="company-logo"> <span class="diploma"><i class="fa fa-graduation-cap"></i> Download Diploma</span> </div>
                    <h6>@item.Name</h6>
                    <p>@item.Profession</p>
                    <p>@item.Place</p>
                    <p class="margin-top-10"> @item.Content <a href="#.">Read More</a> </p>
                </div>
            </div>
        }
        <!-- Wordpress Developer -->
        <!-- html5 and css3 Developer -->

    </div>
</div>
